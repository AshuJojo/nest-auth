{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "modules/mail/templates/**/**"
    ],
    "watchAssets": true
  },
  "generateOptions": {
    "spec": false
  },
  "generateResources": [
    "modules/"
  ],
  "generateMiddlewares": [
    "middlewares/**/*.middleware.ts"
  ]
}